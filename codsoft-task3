#include <iostream>
#include <vector>
#include <string>
using namespace std;

struct Task {
    string description;
    bool done;
};

void showMenu() {
    cout << "\n=== TO-DO LIST MENU ===\n";
    cout << "1. Add Task\n";
    cout << "2. View Tasks\n";
    cout << "3. Mark Task as Done\n";
    cout << "4. Exit\n";
    cout << "Choose an option: ";
}

int main() {
    vector<Task> todoList;
    int choice;

    do {
        showMenu();
        cin >> choice;
        cin.ignore();  

        if (choice == 1) {
            Task newTask;
            cout << "Enter task description: ";
            getline(cin, newTask.description);
            newTask.done = false;
            todoList.push_back(newTask);
            cout << "Task added successfully!\n";

        } else if (choice == 2) {
            cout << "\n--- Your To-Do List ---\n";
            if (todoList.empty()) {
                cout << "No tasks added yet!\n";
            } else {
                for (int i = 0; i < todoList.size(); i++) {
                    cout << i + 1 << ". " << todoList[i].description;
                    if (todoList[i].done) cout << " [Done]";
                    cout << endl;
                }
            }

        } else if (choice == 3) {
            int taskNumber;
            cout << "Enter task number to mark as done: ";
            cin >> taskNumber;
            if (taskNumber >= 1 && taskNumber <= todoList.size()) {
                todoList[taskNumber - 1].done = true;
                cout << "Task marked as done!\n";
            } else {
                cout << "Invalid task number!\n";
            }

        } else if (choice == 4) {
            cout << "Exiting To-Do List... Goodbye!\n";
        } else {
            cout << "Invalid option! Try again.\n";
        }

    } while (choice != 4);

    return 0;
}
